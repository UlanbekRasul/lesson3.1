<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">
    <ImageView
        android:id="@+id/image1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <com.google.android.material.button.MaterialButton
        android:textSize="@dimen/text_medium"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/large_margin"
        android:id="@+id/button_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/purple_200"
        android:text="Edit photo"
        app:layout_constraintTop_toBottomOf="@id/image1"/>

    <EditText
        android:inputType="text"
        android:layout_marginHorizontal="@dimen/large_margin"
        android:textSize="@dimen/text_medium"
        android:id="@+id/edit_1"
        app:layout_constraintTop_toBottomOf="@id/button_edit"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Surname"/>

    <EditText
        android:inputType="text"
        android:layout_marginHorizontal="@dimen/large_margin"
        android:id="@+id/edit_2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="@dimen/text_medium"/>
    <TextView
        android:layout_marginHorizontal="@dimen/large_margin"
        android:textSize="@dimen/text_medium"
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privat Information"
        app:layout_constraintTop_toBottomOf="@id/edit_2"
        android:layout_marginTop="@dimen/normal_margin"/>
        <EditText
            android:inputType="textEmailAddress"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:id="@+id/edit_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            android:layout_marginTop="@dimen/normal_margin"
            android:textSize="@dimen/text_medium"/>
    <EditText
        android:inputType="number"
        android:layout_marginHorizontal="@dimen/large_margin"
        android:id="@+id/edit_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number"
        app:layout_constraintTop_toBottomOf="@id/edit_3"
        android:layout_marginTop="@dimen/normal_margin"
        android:textSize="@dimen/text_medium"/>
    <EditText
        android:inputType="textPassword"
        android:layout_marginHorizontal="@dimen/large_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@id/edit_4"
        android:layout_marginTop="@dimen/normal_margin"
        android:textSize="@dimen/text_medium"/>





</androidx.constraintlayout.widget.ConstraintLayout>
